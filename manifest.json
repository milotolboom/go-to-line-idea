{
  "manifest_version": 3,
  "name": "Github IDEA opener",
  "version": "1.0",
  "description": "Extension that let's you easily open files while reviewing pull requests",
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeContent",
    "storage",
    "activeTab",
    "tabs",
    "webRequest"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["base.css" ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "options_page": "/options/options.html",
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "img/turtle_16.png",
      "32": "img/turtle_32.png",
      "48": "img/turtle_64.png",
      "128": "img/turtle_128.png"
    }
  },
  "icons": {
    "16": "img/turtle_16.png",
    "32": "img/turtle_32.png",
    "48": "img/turtle_64.png",
    "128": "img/turtle_128.png"
  }
}
